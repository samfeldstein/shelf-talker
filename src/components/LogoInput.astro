  buttonId="changeLogoButton"
  buttonLabel="Change logo"
  divId="changeLogoDiv"
>
  <label for="logoUpload">Upload your logo:</label>
  <input type="file" id="logoUpload" accept="image/*" />
</OptionsBox>

