<div>
  <button id="showLogoInputBtn">Change Logo</button>
  <div id="inputDiv" class="hidden">
    <label for="logoUpload">Upload your logo:</label>
    <input type="file" id="logoUpload" accept="image/*" />
  </div>
</div>

<script>
  const showButton = document.getElementById("showLogoInputBtn");
  const inputDiv = document.getElementById("inputDiv");

  showButton.addEventListener("click", () => {
    inputDiv?.classList.remove("hidden");
  });

  const input = document.getElementById("logoUpload");
  const logos = document.querySelectorAll(".logo");

  // Load saved logo on page load
  const savedLogo = localStorage.getItem("userLogo");
  if (savedLogo) {
    logos.forEach((logo) => {
      logo.src = savedLogo;
    });
  }

  // Handle uploads
  input.addEventListener("change", (event) => {
    const file = event.target.files[0];
    if (!file) return;

    const reader = new FileReader();
    reader.onload = (e) => {
      const dataURL = e.target.result;

      // Save to localStorage
      localStorage.setItem("userLogo", dataURL);

      // Apply to all logo elements
      logos.forEach((logo) => {
        logo.src = dataURL;
      });
    };
    reader.readAsDataURL(file);
  });
</script>
