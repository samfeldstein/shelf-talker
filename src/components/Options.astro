---
// Components
import CustomFont from "./CustomFont.astro";
import FontSize from "./FontSize.astro";
import LogoInput from "./LogoInput.astro";
---

<button id="showOptionsButton" class="a">Options</button>

<div id="optionsDiv" class="parent options-box hidden">
  <CustomFont />
  <FontSize />
  <LogoInput />
  <button id="closeOptionsButton" class="close">Done</button>
</div>

<style lang="scss">
  .hidden {
    opacity: 0 !important;
    transform: translateY(-1000px) !important;
    pointer-events: none !important;
  }
</style>

<style lang="scss" is:global>
  #optionsDiv > button {
    max-width: 30rem;
    width: 100%;
  }

  .options-box {
    // Float
    position: fixed;
    z-index: 1000;
    top: -1px;
    left: -1px;

    // Appearance
    width: 100%;
    min-height: 30vw;
    background: white;
    border-radius: 4px;
    padding-left: 2rem;
    padding-right: 2rem;
    padding-top: 4rem;
    padding-bottom: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);

    // Layout
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;

    // Transition
    transition:
      opacity 0.3s ease-in-out,
      transform 0.3s ease-in-out;
    opacity: 1;
    transform: translateY(0);
  }

  // Close buttons
  button.close, button.done {
    background: none;
    border: none;
    padding: 0;
    color: var(--accent);
    margin-top: 4rem;
    width: 100%;

    &:hover,
    &:focus {
      color: unset;
    }
  }

  .hidden {
    opacity: 0 !important;
    transform: translateY(-1000px) !important;
    pointer-events: none !important;
  }
</style>

<script src="../scripts/options.js"></script>
