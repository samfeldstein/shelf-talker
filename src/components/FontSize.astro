---
import OptionsBox from "./OptionsBox.astro";
---

<OptionsBox
  buttonId="fontSizeButton"
  buttonLabel="Change font size"
  divId="fontSizeDiv"
>
  <div>
    <label for="font-size-input"
      >Enter font size below. Hit <kbd>CmdP/CtrlP</kbd> to preview.</label
    >
    <input type="number" id="font-size-input" step="0.5" min="1" />
  </div>
  <button class="done">Done</button>
</OptionsBox>

<script src="../scripts/fontSize.js"></script>
