---
// Components
import ControlBox from "./ControlBox.svelte";

// Styles
import "../styles/font-size.scss";
---

<ControlBox
  client:only
  id="fontSizeContainer"
  buttonLabel="Change font size"
>
  <label for="font-size-input"
    >Enter font size below. Hit <kbd>CmdP/CtrlP</kbd> to preview.</label
  >
  <input type="number" id="font-size-input" step="0.5" min="1" />
  <button id="hideFontSizeBtn">Done</button>
</ControlBox>
